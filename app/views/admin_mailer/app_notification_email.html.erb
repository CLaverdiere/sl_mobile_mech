<!doctype html>

<html>

<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
</head>

<body>
  <h1>New Appointment Created for <%= @appointment.first_name %></h1>
  <p>Here's the appointment info:</p>

  <ul>
    <li>Full Name: <%= @appointment.name  %></li>
    <li>Email: <%= @appointment.email %></li>
    <li>Time: <%= @appointment.time  %></li>
    <li>Phone: <%= @appointment.phone  %></li>
    <li>Reason: <%= @appointment.reason  %></li>
  </ul>

  <p><%= link_to "Edit #{@appointment.first_name}'s Appointment", edit_admin_appointment_url(@appointment)%></p>
</body>

</html>
